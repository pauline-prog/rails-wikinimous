<h1>Articles</h1>
<ul>
  <% @articles.each do |article| %>
    <li><%= link_to(article.title, article_path(article.id)) %><%= link_to'<i class="fas fa-trash"></i>'.html_safe, article_path(article.id), data: { confirm: "Are you sure?", method: :delete } %></li>
  <% end %>
</ul>
<%= link_to("Create a new article", new_article_path) %>